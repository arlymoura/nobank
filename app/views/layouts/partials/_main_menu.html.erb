<div class="column is-3 ">
  
  <aside class="menu is-hidden-mobile">
      <p class="menu-label">
      </p>
      <ul class="menu-list">
          <li ><a class="is-active is-link">Inicio</a></li>
          <li >
          <% if current_user %>
            <%= link_to 'Depósito', new_account_deposit_path(@account), class: 'is-info' %>
            <% else %>
              <%= link_to 'Depósito', new_deposit_path, class: 'is-info' %>
            <% end %>
          </li>
          
          <% unless current_user %>
            <li style="padding-bottom: 10px;">
              <%= link_to('Acessar Conta', new_user_session_path) %>
            </li>
          <% end %>
      </ul>
      <% if current_user %>
        <p class="menu-label">
            Conta <%= current_user.account.account_number %>
        </p>
        <ul class="menu-list">
          <li><a class="is-link">Saldo</a></li>
          <li><a class="is-link">Extrato</a></li>
          <li>
            <%= link_to 'Saque', new_account_withdrawal_path(@account)  %>
          </li>
          <li>
            <%= link_to 'Tranferências', new_account_transfer_path(@account) %>
          </li>
          <li>
            <a>Encerrar Conta</a>
          </li>
          <li>
            <%= link_to('Sair', destroy_user_session_path, method: :delete) %>
          </li>
        </ul>
      <% end %>
  </aside>
</div>